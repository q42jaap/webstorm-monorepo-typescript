{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "removeComments": false,
    "skipLibCheck": true,
    "lib": [
      "es2015"
    ],
    "outDir": "dist",
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": [
    "src"
  ],
  "compileOnSave": true
}
